<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.partner.view.home">

    <ImageView
        android:id="@+id/imagemfundo"
        android:layout_width="480dp"
        android:layout_height="480dp"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="423dp"
        android:contentDescription="@string/todo2"
        android:importantForAccessibility="yes"
        android:src="@drawable/imagemfundo"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="36dp"
        android:contentDescription="@string/icone"
        android:importantForAccessibility="yes"
        android:rotationX="-2"
        android:src="@drawable/icone"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imagemfundo"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="@android:string/fingerprint_icon_content_description" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="654dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/a_partner_chegou_para_expandir_os_limites_da_educa_o"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F8F5F5"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/comecar"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="330dp"
        android:backgroundTint="#19BAD0"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/come_ar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.729"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/sobre"
        android:layout_width="440dp"
        android:layout_height="420dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="582dp"
        android:layout_marginEnd="16dp"
        android:text="@string/texthome"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/cinza"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Partner"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/imagemfundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>